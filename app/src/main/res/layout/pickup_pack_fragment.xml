<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/pickuppackpackFragment_Screen"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/main_page_color"
tools:context=".fragmenty.kurier.PickupPackFragment">


<androidx.recyclerview.widget.RecyclerView
    android:id="@+id/recyclerView_pickuppack"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:textAlignment="center"
    android:visibility="visible"
    tools:listitem="@layout/packstotake_row">

</androidx.recyclerview.widget.RecyclerView>

<TextView
    android:id="@+id/PUPBrakPaczek"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:foregroundGravity="center"
    android:gravity="center"
    android:justificationMode="none"
    android:text="@string/PUP_BrakPaczek"
    android:textSize="24sp"
    android:visibility="invisible"
    tools:visibility="invisible" />

<TextView
    android:id="@+id/networkConnection"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="25dip"
    android:foregroundGravity="center"
    android:gravity="center"
    android:justificationMode="none"
    android:text="@string/Network"
    android:textSize="25sp"
    android:visibility="invisible"
    tools:visibility="invisible" />
</FrameLayout>